<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/iv_id_card_positive"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="66dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/id_card_positive"/>

    <TextView
        android:id="@+id/tv_id_card_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTvHint"
        android:textSize="13sp"
        android:text="@string/id_card_positive"/>

    <ImageView
        android:id="@+id/iv_id_card_negative"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/id_card_negative"/>

    <TextView
        android:id="@+id/tv_id_card_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTvHint"
        android:textSize="13sp"
        android:text="@string/id_card_negative"/>

</LinearLayout>