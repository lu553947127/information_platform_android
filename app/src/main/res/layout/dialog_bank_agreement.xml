<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_background_white_10"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="15dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/user_bank_agreement"
        android:textSize="@dimen/sp_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="协议内容"
        android:textSize="12sp"
        android:layout_below="@id/tv_title"/>


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/user_read"
        android:textSize="@dimen/tvThreeSize"
        android:textColor="@color/text1"
        android:button="@drawable/selector_bank_check_drawable"
        android:checked="true"
        android:paddingLeft="5dp"
        android:layout_below="@id/tv_content"/>

    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_confirm_gray"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:text="@string/negative"
        android:layout_below="@id/checkbox"/>

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_confirm"
        android:gravity="center"
        android:textColor="@color/colorFFF"
        android:textSize="14sp"
        android:text="@string/positive"
        android:layout_below="@id/checkbox"
        android:layout_alignParentRight="true"/>

</RelativeLayout>