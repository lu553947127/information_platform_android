<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_head_people"
    android:id="@+id/rl_places">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <com.shuangduan.zcy.weight.CircleImageView
            android:id="@+id/cv_first"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/icon_first_ranking"
            android:padding="1dp"
            android:src="@drawable/icon_no_image"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_first_crown"
            android:layout_toLeftOf="@+id/cv_first"
            android:layout_marginRight="-15dp"/>

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_FFC421"
            android:textSize="11sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="39dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:src="@drawable/icon_stage_second"/>

        <com.shuangduan.zcy.weight.CircleImageView
            android:id="@+id/cv_second"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_second_ranking"
            android:padding="1dp"
            android:src="@drawable/icon_no_image"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/icon_second_crown" />

        <TextView
            android:id="@+id/tv_second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_E8E8E8"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="46dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_stage_third"/>

        <com.shuangduan.zcy.weight.CircleImageView
            android:id="@+id/cv_third"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_third_ranking"
            android:padding="1dp"
            android:src="@drawable/icon_no_image"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_third_crown" />

        <TextView
            android:id="@+id/tv_third_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_FF9314"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>