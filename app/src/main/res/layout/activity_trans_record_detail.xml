<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fff_7"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"
            android:textColor="@color/colorTv"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="交易成功"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="23dp"
            android:background="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"/>

        <TextView
            android:id="@+id/tv_title_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="项目/标题"/>

        <TextView
            android:id="@+id/tv_in_out_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="收入支出"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_type_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_in_out_tip"
            android:layout_marginTop="17dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="@string/type"/>

        <TextView
            android:id="@+id/tv_source_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_tip"
            android:layout_marginTop="17dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="消费来源"/>

        <TextView
            android:id="@+id/tv_trans_order_number_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_source_tip"
            android:layout_marginTop="17dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="@string/trans_order_number"/>

        <TextView
            android:id="@+id/tv_extra_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_trans_order_number_tip"
            android:layout_marginTop="17dp"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:text="备注"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_title_tip"
            app:layout_constraintTop_toTopOf="@+id/tv_title_tip"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="35dp"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_in_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_in_out_tip"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_type_tip"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_source_tip"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_trans_order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_trans_order_number_tip"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_extra_tip"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>