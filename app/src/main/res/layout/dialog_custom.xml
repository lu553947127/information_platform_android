<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/tv_tip"
        app:layout_constraintTop_toTopOf="@+id/tv_tip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tip"
        android:layout_marginRight="6dp"
        android:src="@drawable/icon_error"/>

    <TextView
        android:id="@+id/tv_enclosure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/color_6a5ff8"
        android:textSize="13sp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_tip_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_tips"
        android:drawablePadding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/selector_btn_confirm_gray"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:text="@string/negative"/>

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_negative"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_btn_confirm"
        android:gravity="center"
        android:textColor="@color/colorFFF"
        android:textSize="14sp"
        android:text="@string/positive"/>

</androidx.constraintlayout.widget.ConstraintLayout>