<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/circular_background_white_10"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="17dp"
    android:paddingRight="15dp"
    android:paddingBottom="14dp">

    <TextView
        android:id="@+id/tv_material_name"
        style="@style/TextSize14Style"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorTv" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimenTvStates" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimenTvStates" />


    <TextView
        android:id="@+id/tv_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dimenTvStates" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimenTvStates" />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="4dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorTvStates"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>