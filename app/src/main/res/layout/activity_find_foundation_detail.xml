<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_content_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:drawableBottom="@drawable/shape_primary_3"
                    android:drawablePadding="2dp"
                    android:text="概况"
                    android:textColor="@color/colorTv"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_material_name_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_material_name"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_material_num_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_material_number"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_material_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_existing_address_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_existing_address"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_existing_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_need_address_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_need_address"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_need_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_distance_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_distance"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_effective_time_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_effective_time"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_effective_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_restructuring_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_restructuring"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_restructuring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_contact_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/material_real_name"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_contact_phone_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon_contacts_phone"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_remark_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/material_remark"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_646464"
                    android:textSize="13sp"
                    android:text="- -"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="53dp"
        android:src="@drawable/icon_cancel_release"
        android:visibility="visible" />
</RelativeLayout>