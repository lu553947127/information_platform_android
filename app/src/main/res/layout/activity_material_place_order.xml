                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/material_remark"
                        android:textColor="@color/colorTv"
                        android:textSize="14sp" />

                    <fj.edittextcount.lib.FJEditTextCount
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/selector_btn_gray_half"
                        android:singleLine="true"
                        app:etHint="@string/material_et_remark"
                        app:etHintColor="@color/colorTvHint"
                        app:etLineColor="@color/colorTransparent"
                        app:etMaxLength="300"
                        app:etMinHeight="88dp"
                        app:etPromptTextColor="@color/color_999999"
                        app:etPromptTextSize="11sp"
                        app:etTextColor="@color/colorTv"
                        app:etTextSize="14sp"
                        app:etType="percentage"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circular_background_white_15"
                android:orientation="vertical">

                <include layout="@layout/layout_equipment_address" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共采购0套，共计"
                android:textColor="@color/colorTv"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_EF583E"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/colorTv"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submission"
            style="@style/BtnConfirm"
            android:layout_width="89dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="@string/material_tv_submission"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>