                        android:text="@string/material_lease_time"
                        android:textColor="@color/colorTv"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
