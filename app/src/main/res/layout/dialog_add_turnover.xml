<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_background_white_top"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:id="@+id/ts_project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_project"
            app:value_text="@string/admin_please_select" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:id="@+id/ts_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            app:title_text="@string/admin_material_plan"
            app:value_text="@string/admin_please_select" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:id="@+id/ts_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_num"
            app:value_text="@string/admin_turnover_hint_input" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_start_time"
            app:value_text="@string/admin_please_select" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            app:title_text="@string/admin_material_enter_time"
            app:value_text="@string/admin_please_select" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_exit_time"
            app:value_text="@string/admin_please_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_amortize"
            app:value_text="@string/admin_turnover_hint_input" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            app:title_text="@string/admin_material_original"
            app:value_text="@string/admin_turnover_hint_input" />

        <com.shuangduan.zcy.weight.TurnoverSelectView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title_text="@string/admin_material_value"
            app:value_text="@string/admin_turnover_hint_input" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_F6F7FB" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dialog_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/admin_selector_project"
                    android:textColor="@color/colorTv"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_dialog_item_title"
                    android:layout_alignBottom="@id/tv_dialog_item_title"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp"
                    android:text="@string/positive"
                    android:textColor="@color/color_6a5ff8"
                    android:textSize="15sp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_E6E6E6" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ll_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFFF"
                android:gravity="center"
                android:hint="请输入"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:paddingRight="25dp"
                android:paddingBottom="12dp"
                android:textColor="@color/colorTv"
                android:textColorHint="@color/colorTv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_et_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/et_value"
                android:layout_alignBottom="@id/et_value"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:text="@string/positive"
                android:textColor="@color/color_6a5ff8"
                android:textSize="15sp" />
        </RelativeLayout>


    </FrameLayout>


</LinearLayout>