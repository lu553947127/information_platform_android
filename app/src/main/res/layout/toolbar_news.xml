<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    android:id="@+id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="28dp">

        <!--左侧头像-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_toolbar">
            <com.shuangduan.zcy.weight.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="36dp"
                android:layout_height="36dp"
                tools:ignore="MissingConstraints"
                android:src="@drawable/default_head"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sgs"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_mini_sgs"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_header"
                app:layout_constraintRight_toRightOf="@id/iv_header" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--标题-->
        <TextView
            android:id="@+id/tv_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorFFF"
            android:textSize="18sp"
            android:text="@string/circle"/>

        <!--订阅-->
        <RelativeLayout
            android:id="@+id/rl_subscribe_children"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rl_message"
            android:layout_marginRight="-15dp"
            android:background="@drawable/selector_toolbar"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_toolbar"
                android:src="@drawable/icon_record"/>
            <TextView
                android:id="@+id/tv_subscribe_children_numbers"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/iv_subscribe"
                android:background="@drawable/progressbar_red"
                android:textColor="@color/colorBgDark"
                android:gravity="center"
                android:text="15"
                android:textSize="11sp"
                android:visibility="visible"/>
        </RelativeLayout>

        <!--通讯录-->
        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_toolbar"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_toolbar"
                android:src="@drawable/icon_contacts"/>
            <TextView
                android:id="@+id/tv_contacts_numbers"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/iv_message"
                android:background="@drawable/progressbar_red"
                android:textColor="@color/colorBgDark"
                android:gravity="center"
                android:textSize="11sp"
                android:visibility="invisible"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>