<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_type_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:text="物资分类"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_material"
        app:layout_constraintLeft_toLeftOf="@+id/tv_type_material"
        android:layout_marginTop="15dp"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/tv_type_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fl_material"
        app:layout_constraintLeft_toLeftOf="@+id/tv_type_material"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:text="产品分类"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_type_material"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_product"
        android:layout_marginBottom="15dp"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="#E0E0E5"
        app:layout_constraintTop_toBottomOf="@+id/fl_product"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_positive"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="16sp"
        android:text="@string/negative"/>

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@+id/tv_negative"
        app:layout_constraintLeft_toRightOf="@+id/tv_negative"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/colorFFF"
        android:textSize="16sp"
        android:text="@string/positive"/>

</androidx.constraintlayout.widget.ConstraintLayout>