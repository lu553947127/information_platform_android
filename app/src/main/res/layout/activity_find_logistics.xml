<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_logistics_bg">


    <com.shuangduan.zcy.weight.AdaptationScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/circular_background_white_8"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/material_name" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_materials_name"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_input" />
            </LinearLayout>

            <View style="@style/DividingLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/material_number" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_email"
                    style="@style/FindNeedEditStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_input"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_bg_history_item"
                    android:drawableRight="@drawable/icon_bottom"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="请选择单位"
                    android:textColor="@color/colorTvHint"
                    android:textSize="14sp" />

            </LinearLayout>

            <View style="@style/DividingLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/find_send_address" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_send_address"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_address_hint" />


            </LinearLayout>

            <View style="@style/DividingLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/find_receive_address" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_receive_address"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_address_hint" />

            </LinearLayout>

            <View style="@style/DividingLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/find_receive_time" />

                <TextView
                    android:id="@+id/tv_receive_time"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/icon_calendar"
                    android:gravity="left|center_vertical" />


            </LinearLayout>

            <View style="@style/DividingLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/effective_time" />

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/FindNeedEditStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:gravity="left|center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="至"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/FindNeedEditStyle"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.3"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_calendar"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView
                    style="@style/RedMustText"
                    android:visibility="invisible" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/find_contact" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_name"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_contact_hint" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:text="@string/contacts_phone" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_phone"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_contact_phone_hint" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFFF"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/star"
                    style="@style/RedMustText"
                    app:layout_constraintBottom_toBottomOf="@id/tv_remark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_remark" />

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/FindNeedTextStyle"
                    android:layout_width="100dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/find_remark"
                    app:layout_constraintLeft_toRightOf="@id/star"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_param"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="@string/hint_param"
                    android:minHeight="50dp"
                    android:textColor="@color/colorTv"
                    android:textColorHint="@color/colorTvHint"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_remark"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_remark" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/tv_event"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/selector_btn_bg_e0e0e5_6a5ff8"
                android:button="@null"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@drawable/selector_text_color_b1_ff"
                android:textSize="16sp" />
        </LinearLayout>
    </com.shuangduan.zcy.weight.AdaptationScrollView>


    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bar_back"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/toolbar_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:lines="1"
            android:text="@string/find_logistics"
            android:textColor="@color/colorFFF"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--隐藏头部-->
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:alpha="0"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bar_back_new"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/toolbar_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bar_title_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:lines="1"
            android:maxEms="13"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="@string/find_logistics"
            android:textColor="@color/colorFFF"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>