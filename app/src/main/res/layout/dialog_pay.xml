<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="435dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        android:text="@string/cancel"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorTv"
        android:textSize="16sp"
        android:text="@string/pwd_pay"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd"
        app:layout_constraintRight_toLeftOf="@+id/iv_second"
        android:layout_marginTop="35dp"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <ImageView
        android:id="@+id/iv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_first"
        app:layout_constraintTop_toTopOf="@+id/iv_first"
        app:layout_constraintRight_toLeftOf="@+id/iv_three"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_second"
        app:layout_constraintTop_toTopOf="@+id/iv_first"
        app:layout_constraintRight_toLeftOf="@+id/iv_four"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <ImageView
        android:id="@+id/iv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_three"
        app:layout_constraintTop_toTopOf="@+id/iv_first"
        app:layout_constraintRight_toLeftOf="@+id/iv_five"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <ImageView
        android:id="@+id/iv_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_four"
        app:layout_constraintTop_toTopOf="@+id/iv_first"
        app:layout_constraintRight_toLeftOf="@+id/iv_six"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <ImageView
        android:id="@+id/iv_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_five"
        app:layout_constraintTop_toTopOf="@+id/iv_first"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/shape_pwd_pay_empty"/>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/iv_six"
        app:layout_constraintTop_toBottomOf="@+id/iv_first"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorTvHint"
        android:textSize="12sp"
        android:text="@string/forget_pwd"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_pwd"
        app:layout_constraintRight_toLeftOf="@+id/tv_2"
        android:layout_marginTop="70dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="1"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="@+id/tv_1"
        app:layout_constraintRight_toLeftOf="@+id/tv_3"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="2"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_2"
        app:layout_constraintTop_toTopOf="@+id/tv_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="3"/>

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:layout_constraintRight_toLeftOf="@+id/tv_5"
        android:layout_marginTop="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="4"/>

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_4"
        app:layout_constraintTop_toTopOf="@+id/tv_4"
        app:layout_constraintRight_toLeftOf="@+id/tv_6"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="5"/>

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_5"
        app:layout_constraintTop_toTopOf="@+id/tv_4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="6"/>

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_4"
        app:layout_constraintRight_toLeftOf="@+id/tv_8"
        android:layout_marginTop="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="7"/>

    <TextView
        android:id="@+id/tv_8"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_7"
        app:layout_constraintTop_toTopOf="@+id/tv_7"
        app:layout_constraintRight_toLeftOf="@+id/tv_9"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="8"/>

    <TextView
        android:id="@+id/tv_9"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tv_8"
        app:layout_constraintTop_toTopOf="@+id/tv_7"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="9"/>

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/tv_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_8"
        app:layout_constraintRight_toRightOf="@+id/tv_8"
        android:layout_marginTop="1dp"
        android:background="@color/colorFFF"
        android:textColor="@color/colorTv"
        android:textSize="26sp"
        android:text="0"/>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="@+id/tv_9"
        app:layout_constraintTop_toBottomOf="@+id/tv_9"
        app:layout_constraintRight_toRightOf="@+id/tv_9"
        android:background="#F2F0F4"
        android:src="@drawable/icon_pay_del"/>

    <View
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_1"
        app:layout_constraintRight_toRightOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="@+id/tv_0"
        android:background="#F2F0F4"/>

</androidx.constraintlayout.widget.ConstraintLayout>