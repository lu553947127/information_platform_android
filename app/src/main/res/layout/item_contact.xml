<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_card_bg"
        android:elevation="5dp"
        android:padding="15dp"
        android:translationZ="5dp">

        <TextView
            android:id="@+id/tv_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_646464"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_phone"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLength="20"
            android:textColor="@color/color_6a5ff8"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_principal"
            app:layout_constraintLeft_toRightOf="@id/tv_principal"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="@id/tv_principal" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_646464"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tv_principal" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_646464"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tv_type" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_646464"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tv_unit" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>