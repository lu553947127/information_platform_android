<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorFFF"
    android:layout_height="66dp">

    <com.shuangduan.zcy.weight.CircleImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_header"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sgs"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:src="@drawable/icon_mini_sgs"
        android:layout_alignBottom="@id/iv_header"
        android:layout_alignRight="@id/iv_header"
        android:layout_marginBottom="1dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTv"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"/>

</RelativeLayout>