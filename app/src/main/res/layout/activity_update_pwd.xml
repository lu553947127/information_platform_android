<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFFF"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="9dp"
            android:inputType="textPassword"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="@color/colorTvHint"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:hint="@string/hint_old_pwd"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_below="@+id/edt_pwd_old"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/edt_pwd_old"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="9dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/colorTvHint"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:hint="@string/set_new_pwd"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_below="@+id/edt_pwd"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/edt_pwd"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="9dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/colorTvHint"
            android:textColor="@color/colorTv"
            android:textSize="13sp"
            android:hint="@string/hint_new_pwd"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_below="@+id/edt_pwd_again"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/BtnConfirm"
        android:layout_width="335dp"
        android:layout_marginTop="30dp"
        android:text="@string/save"/>

</LinearLayout>