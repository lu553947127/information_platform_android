<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="@color/colorBgDark">

    <com.shuangduan.zcy.weight.AdaptationScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/fake_status_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:background="@drawable/shape_bg_mine">

                <com.shuangduan.zcy.weight.CircleImageView
                    android:id="@+id/iv_user"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFFF"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_balance"
                    app:layout_constraintTop_toTopOf="@id/iv_user"
                    android:layout_marginTop="6dp"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_username"
                    android:layout_below="@+id/tv_username"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorFFF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/iv_user"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user"
                    app:layout_constraintLeft_toRightOf="@id/iv_user"
                    android:layout_marginLeft="16dp"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_sgs"
                    android:layout_marginTop="64dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user"
                    app:layout_constraintRight_toRightOf="@id/iv_user"
                    android:layout_marginBottom="2dp"
                    tools:ignore="MissingConstraints"
                    android:visibility="invisible"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_num_of_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_username"
                    android:layout_below="@+id/tv_balance"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user"
                    app:layout_constraintLeft_toLeftOf="@id/tv_balance"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/tv_withdraw"
                    android:layout_width="60dp"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:background="@drawable/shape_bg_withdraw"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_username"
                    android:textColor="@color/colorFFF"
                    android:textSize="12sp"
                    android:text="@string/withdraw"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_recharge"
                    android:layout_width="60dp"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:background="@drawable/shape_bg_recharge"
                    android:layout_marginRight="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_num_of_people"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/colorFFF"
                    android:textSize="12sp"
                    android:text="@string/recharge"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_order"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_custom">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/icon_order"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_666666"
                        android:textSize="13sp"
                        android:text="@string/my_order"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_income"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_custom">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/icon_income"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="52dp"
                        android:textColor="@color/color_666666"
                        android:textSize="13sp"
                        android:text="@string/my_income" />

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_subscription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_subscription"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/my_subscription"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_demand"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_mine_demand"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/my_demand"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mine_subscription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_mine_subscription"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/mine_subscription"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_material"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_my_material"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/my_material"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_transaction_record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_record_transaction"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/transaction_record"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_agreement_manage"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_agreement_manage"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/agreement_manage"/>

            <include android:visibility="gone" layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pwd_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_pwd_pay"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/pwd_pay"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_read_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_history"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/read_history"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_message"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/feedback"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recommend_friends"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_invite_friend"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/recommend_friends"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_collection"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_collect"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/my_collection"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_set"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_set"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/set"/>

            <include layout="@layout/divider_15"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_helper"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_bg_custom"
                android:drawableLeft="@drawable/icon_help"
                android:drawablePadding="11dp"
                android:drawableRight="@drawable/icon_next"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:text="@string/helper"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </com.shuangduan.zcy.weight.AdaptationScrollView>

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:alpha="0"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_username_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorFFF"
            android:textSize="18sp"
            android:text="@string/mine" />

    </RelativeLayout>

</RelativeLayout>