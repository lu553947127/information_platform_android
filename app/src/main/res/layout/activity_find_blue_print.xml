<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_find_blue_print">


    <com.shuangduan.zcy.weight.AdaptationScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/circular_background_white_8"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText"
                    android:visibility="invisible"/>

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:text="@string/project_names" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_project_name"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_input" />
            </LinearLayout>

            <View style="@style/DividingLine" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText"
                    android:visibility="invisible"/>

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:text="@string/find_project_address" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_project_address"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_address_hint" />


            </LinearLayout>

            <View style="@style/DividingLine" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:text="@string/find_need_time" />

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/FindNeedEditStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:gravity="left|center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="至"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/FindNeedEditStyle"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.3"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_calendar"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFFF"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/star"
                    style="@style/RedMustText"
                    app:layout_constraintBottom_toBottomOf="@id/tv_blue_print_info"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_blue_print_info" />

                <TextView
                    android:id="@+id/tv_blue_print_info"
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/find_blue_print_info"
                    app:layout_constraintLeft_toRightOf="@id/star"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_param"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="@string/find_blue_print_info_hint"
                    android:minHeight="105dp"
                    android:textColor="@color/colorTv"
                    android:textColorHint="@color/colorTvHint"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_blue_print_info"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_blue_print_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/DividingLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView
                    style="@style/RedMustText"
                    android:visibility="invisible" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:text="@string/find_contact" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_name"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_contact_hint" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorFFF"
                android:orientation="horizontal">

                <TextView style="@style/RedMustText" />

                <TextView
                    style="@style/FindNeedTextStyle"
                    android:layout_width="75dp"
                    android:text="@string/contacts_phone" />

                <com.shuangduan.zcy.weight.XEditText
                    android:id="@+id/et_phone"
                    style="@style/FindNeedEditStyle"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/find_contact_phone_hint" />

            </LinearLayout>

            <View style="@style/DividingLine" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="如有需要请联系客服：4009-987789"
                android:textSize="12sp"
                android:textColor="@color/colorTvHint"/>



            <Button
                android:id="@+id/tv_event"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/selector_btn_bg_e0e0e5_6a5ff8"
                android:button="@null"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@drawable/selector_text_color_b1_ff"
                android:textSize="16sp" />
        </LinearLayout>
    </com.shuangduan.zcy.weight.AdaptationScrollView>


    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bar_back"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/toolbar_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:lines="1"
            android:text="@string/find_blue_print"
            android:textColor="@color/colorFFF"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--隐藏头部-->
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:alpha="0"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bar_back_new"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/toolbar_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bar_title_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:lines="1"
            android:maxEms="13"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="@string/find_blue_print"
            android:textColor="@color/colorFFF"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>