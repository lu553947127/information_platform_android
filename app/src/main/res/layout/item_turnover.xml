<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_background_white_10"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/tv_use_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:textColor="@color/colorFFF"
        android:textSize="13sp"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/ll_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="14dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorTv"
            android:textSize="14sp"
            android:text="挂篮"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:text="材料类别：模板"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:text="是否上架： 大客户打开手铐"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:text="存放地点 ：ask还打算快点哈看啥看"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_context">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F4F4F4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_admin_delete"
                android:drawablePadding="5dp"
                android:textColor="@color/colorTvHint"
                android:textSize="12sp"
                android:text="删除"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_admin_split"
                android:drawablePadding="5dp"
                android:layout_toLeftOf="@+id/tv_edit"
                android:layout_marginRight="30dp"
                android:textColor="@color/color_5C54F4"
                android:textSize="12sp"
                android:text="拆分"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_admin_edit"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_5C54F4"
                android:textSize="12sp"
                android:text="编辑"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>