<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgDark">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/tv_pwd_set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_custom"
        android:drawableRight="@drawable/icon_next"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="16sp"
        android:text="@string/pwd_pay_set"/>

    <include layout="@layout/divider_15"/>

    <TextView
        android:id="@+id/tv_pwd_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_custom"
        android:drawableRight="@drawable/icon_next"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="16sp"
        android:text="@string/pwd_pay_update"/>

    <include layout="@layout/divider_15"/>

    <TextView
        android:id="@+id/tv_pwd_forget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_custom"
        android:drawableRight="@drawable/icon_next"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="16sp"
        android:text="@string/forget_pwd_pay"/>

</LinearLayout>