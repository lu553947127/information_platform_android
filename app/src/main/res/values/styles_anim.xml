<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--dialog通用动画-->
    <style name="DialogAnimCustom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--底部弹出动画-->
    <style name="DialogAnimBottom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--顶部弹出动画-->
    <style name="DialogAnimTop" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_top</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <style name="AnimPhotoView" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/photo_view_in</item>
        <item name="android:activityCloseExitAnimation">@anim/photo_view_out</item>
    </style>

</resources>