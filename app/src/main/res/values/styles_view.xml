<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--公共按钮 主色-->
    <style name="BtnConfirm">
        <item name="android:layout_width">295dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_btn_confirm</item>
        <item name="android:textColor">@color/colorFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--公共按钮 灰色-->
    <style name="BtnConfirmGray" parent="BtnConfirm">
        <item name="android:background">@drawable/shape_btn_confirm_gray_20</item>
        <item name="android:textColor">@color/color_646464</item>
    </style>

    <!--全局输入框 属性配置-->
    <style name="MessageHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorTvHint</item>
        <item name="android:textColor">@color/colorTv</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--TabLayout 文字大小配置-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!--基建物资筛选弹窗 属性配置-->
    <style name="MaterialFilterStyle">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!--基建物资筛选弹窗 属性配置-->
    <style name="MaterialCbFilterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/selector_pull_arrow</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:button">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@drawable/selector_text_color_666_3c2fdc</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!--分割线-->
    <style name="DividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--左侧必填红点-->
    <style name="RedMustText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textColor">@color/color_F83425</item>
        <item name="android:text">*</item>
    </style>

    <!--后台管理一级文字-->
    <style name="AdminManageFirstText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTv</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--后台管理二级文字-->
    <style name="AdminManageSecondText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:drawableRight">@drawable/icon_next</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/colorTvHint</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--后台管理二级输入框-->
    <style name="AdminManageSecondHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/colorTv</item>
        <item name="android:textColorHint">@color/colorTvHint</item>
        <item name="android:textSize">15sp</item>
    </style>



    <!--找需求模块一级文字-->
    <style name="FindNeedTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTv</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--找需求模块EditText通用样式-->
    <style name="FindNeedEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textColorHint">@color/colorTvHint</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>